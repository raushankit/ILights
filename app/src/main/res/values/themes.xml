<resources>
    <!-- Base application theme. -->
    <style name="Theme.ILights" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="toolbarColor">#009e60</item>
        <item name="inactive_color">#515151</item>
        <item name="flowBackgroundColor">#19009e60</item>
        <item name="actionModeStatusBarColor">@color/gray33</item>
    </style>
    <style name="PreferenceScreen" parent="Theme.ILights">
        <item name="colorAccent">@color/scarlet_red</item>
    </style>

    <style name="Theme.ILights.1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#009e60</item>
        <item name="colorPrimaryVariant">#008b54</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#009e60</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionModeStyle">@style/Theme.ILights.1.ActionModeStyle</item>
        <!-- Customize your theme here. -->
        <item name="toolbarColor">#009e60</item>
        <item name="inactive_color">#515151</item>
        <item name="flowBackgroundColor">#19009e60</item>
        <item name="actionModeStatusBarColor">@color/gray33</item>

    </style>

    <style name="Theme.ILights.1.ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/gray33</item>
        <item name="titleTextStyle">@style/Theme.ILights.1.ActionModeTitleStyle</item>
        <item name="closeItemLayout">@layout/cab_close_icon</item>
    </style>

    <style name="Theme.ILights.1.ActionModeTitleStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>