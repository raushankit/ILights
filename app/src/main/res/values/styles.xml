<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTheme.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="Controller.CardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/user_info_name_text</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/_10sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_10sdp</item>
    </style>

    <style name="MaterialCardview.Board" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/google_red</item>
    </style>

    <!-- Rounded BottomSheet Dialog -->
    <style name="BoardMenuPickerDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BoardMenuPickerDialogSheet</item>
    </style>
    <style name="BoardMenuPickerDialogSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BoardMenuPickerShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="BoardMenuPickerShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_14sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_14sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- custom bottom sheet dialog -->
    <style name="RoundBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundBottomSheetDialogSheet</item>
    </style>
    <style name="RoundBottomSheetDialogSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/RoundBottomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="RoundBottomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_14sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_14sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>