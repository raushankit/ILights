        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#323232</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="toolbarColor">#222222</item>
        <item name="flowBackgroundColor">#29BB86FC</item>
    </style>
</resources>