        <item name="titleTextStyle">@style/Theme.ILights.1.ActionModeTitleStyleDark</item>
        <item name="closeItemLayout">@layout/cab_close_icon</item>
    </style>

    <style name="Theme.ILights.1.ActionModeTitleStyleDark">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>