<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.ILights.1"
    tools:context=".BoardForm">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/board_form_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/toolbarColor"
        android:elevation="@dimen/_10sdp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_baseline_clear_24"
        app:navigationIconTint="@color/white"
        app:title="@string/board"
        app:titleTextColor="@color/white" />

    <FrameLayout
        android:id="@+id/board_form_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/board_form_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <com.raushankit.ILghts.utils.FormFlowLine
        android:id="@+id/board_form_flow_line"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/board_form_toolbar"
        android:elevation="@dimen/_10sdp"
        android:textColor="?attr/colorOnPrimary"
        app:active_color="?attr/colorPrimary"
        app:backgroundColor="?attr/flowBackgroundColor"
        app:gap="@dimen/_25sdp"
        app:pointer_radius="@dimen/_10sdp"
        app:strokeWidth="@dimen/_4sdp" />
    <ProgressBar
        android:id="@+id/board_form_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_12sdp"
        android:indeterminateOnly="true"
        android:indeterminateTint="?attr/colorPrimary"
        android:layout_marginTop="@dimen/_minus6sdp"
        android:layout_below="@id/board_form_flow_line"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
</RelativeLayout>