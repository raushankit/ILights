<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_3sdp"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/board_notification_list_shimmer_item_body"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/pin_item_shimmer_frame" />
    <View
        android:id="@+id/board_notification_list_shimmer_item_time"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_7sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/pin_item_shimmer_frame"
        android:layout_below="@id/board_notification_list_shimmer_item_body"/>
    <View
        android:id="@+id/board_notification_list_shimmer_item_accept"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="@color/pin_item_shimmer_frame"
        android:layout_below="@id/board_notification_list_shimmer_item_time"
        android:layout_alignParentStart="true" />
    <View
        android:id="@+id/board_notification_list_shimmer_item_reject"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:background="@color/pin_item_shimmer_frame"
        android:layout_below="@id/board_notification_list_shimmer_item_time"
        android:layout_toEndOf="@id/board_notification_list_shimmer_item_accept" />
</RelativeLayout>