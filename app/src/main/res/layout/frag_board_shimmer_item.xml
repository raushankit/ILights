<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/board_list_shimmer_item_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:background="@color/pin_item_shimmer_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />

    <View
        android:id="@+id/board_list_shimmer_tag_item1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/pin_item_shimmer_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/board_list_shimmer_item_title"
        app:layout_constraintWidth_percent="0.15" />

    <View
        android:id="@+id/board_list_shimmer_tag_item2"
        android:layout_width="0dp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/pin_item_shimmer_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@id/board_list_shimmer_tag_item1"
        app:layout_constraintTop_toBottomOf="@id/board_list_shimmer_item_title"
        app:layout_constraintWidth_percent="0.15" />

    <View
        android:id="@+id/board_list_shimmer_tag_item3"
        android:layout_width="0dp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/pin_item_shimmer_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@id/board_list_shimmer_tag_item2"
        app:layout_constraintTop_toBottomOf="@id/board_list_shimmer_item_title"
        app:layout_constraintWidth_percent="0.15" />

    <View
        android:id="@+id/board_list_shimmer_description"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/pin_item_shimmer_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/board_list_shimmer_tag_item1"
        app:layout_constraintWidth_percent="0.65" />

    <View
        android:id="@+id/board_list_shimmer_uid_text"
        android:layout_width="0dp"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@color/pin_item_shimmer_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/board_list_shimmer_description"
        app:layout_constraintWidth_percent="0.50" />

    <View
        android:id="@+id/board_list_shimmer_menu1"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/pin_item_shimmer_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/board_list_shimmer_description" />
    <View
        android:id="@+id/board_list_shimmer_menu2"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/pin_item_shimmer_frame"
        app:layout_constraintEnd_toStartOf="@id/board_list_shimmer_menu1"
        app:layout_constraintTop_toBottomOf="@id/board_list_shimmer_description" />
    <View
        android:id="@+id/board_list_shimmer_menu3"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/pin_item_shimmer_frame"
        app:layout_constraintEnd_toStartOf="@id/board_list_shimmer_menu2"
        app:layout_constraintTop_toBottomOf="@id/board_list_shimmer_description" />

</androidx.constraintlayout.widget.ConstraintLayout>