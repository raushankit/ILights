<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.board.BoardAddUsers">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/fragment_board_add_user_toolbar"
        app:titleTextColor="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/fragment_board_add_user_search_toolbar"
        app:collapseIcon="@drawable/ic_arrow_back_ios_48px"
        app:titleTextColor="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorOnPrimary"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_board_add_user_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/fragment_board_add_user_toolbar" />

</RelativeLayout>