<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:id="@+id/board_list_top_card_view"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="@dimen/_10sdp"
    android:layout_margin="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/board_list_item_like_button"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/heart_on"
            android:focusable="true"
            android:clickable="true"
            app:tint="@color/board_list_item_title_text"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/board_list_item_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/board_list_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/add_board"
            android:ellipsize="end"
            app:layout_constraintWidth_percent="0.7"
            android:textStyle="bold"
            android:textColor="@color/board_list_item_title_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/rubik_variable"
            android:textSize="@dimen/_20sdp" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/board_list_item_tags_layout_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:layout_constraintStart_toStartOf="@+id/board_list_item_title"
            app:layout_constraintTop_toBottomOf="@+id/board_list_item_title">
            <TextView
                android:id="@+id/board_list_item_status_tag_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/board_list_item_tags_background"
                android:text="status"
                android:drawablePadding="@dimen/_1sdp"
                android:textAllCaps="true"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                app:drawableTint="@color/board_list_item_status_tag"
                app:drawableStartCompat="@drawable/ic_heart_shape" />

            <TextView
                android:id="@+id/board_list_item_visibility_tag_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/board_list_item_tags_background"
                android:text="visibility"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:textSize="@dimen/_8sdp"
                android:drawablePadding="@dimen/_4sdp"
                app:drawableTint="@color/board_list_item_visibility_tag"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                app:drawableStartCompat="@drawable/ic_board_list_item_visibility_public"/>
            <TextView
                android:id="@+id/board_list_item_access_tag_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/board_list_item_tags_background"
                android:text="user"
                android:clickable="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/_8sdp"
                android:drawablePadding="@dimen/_4sdp"
                app:drawableTint="@color/board_list_item_access_level_tag"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                app:drawableStartCompat="@drawable/ic_board_list_item_tag_access_level"/>
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:id="@+id/board_list_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:fontFamily="@font/rubik_variable"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/board_list_item_details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@+id/board_list_item_title"
            app:layout_constraintTop_toBottomOf="@+id/board_list_item_tags_layout_parent"
            app:layout_constraintWidth_percent="0.85" />

        <TextView
            android:id="@+id/board_list_item_uid_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:ellipsize="middle"
            android:padding="@dimen/_2sdp"
            android:lines="1"
            android:textStyle="bold"
            android:gravity="start"
            android:text="@string/board_list_item_uid"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/board_list_item_copy_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/board_list_item_description" />

        <FrameLayout
            android:id="@+id/board_list_item_ellipsis_menu"
            android:layout_width="@dimen/_30sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/board_list_item_description"
            android:layout_height="@dimen/_30sdp">
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                app:tint="@color/board_list_item_title_text"
                android:contentDescription="@string/name_header"
                android:src="@drawable/ic_three_dots"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15sdp"
                android:text="9"
                android:visibility="gone"
                android:minWidth="@dimen/_15sdp"
                android:maxWidth="@dimen/_18sdp"
                android:padding="@dimen/_1sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center"
                android:textSize="@dimen/_8sdp"
                android:background="@drawable/icon_bubble_text_view_background"
                android:layout_gravity="top|end"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/board_list_item_switch_button"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:tint="@color/board_list_item_title_text"
            android:padding="@dimen/_7sdp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:contentDescription="@string/name_header"
            android:src="@drawable/ic_baseline_control_camera_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/board_list_item_ellipsis_menu"
            app:layout_constraintTop_toBottomOf="@+id/board_list_item_description" />

        <ImageView
            android:id="@+id/board_list_item_copy_button"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_8sdp"
            android:focusable="true"
            android:clickable="true"
            app:tint="@color/board_list_item_title_text"
            android:foreground="?attr/selectableItemBackground"
            android:contentDescription="@string/name_header"
            android:src="@drawable/ic_baseline_content_copy_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/board_list_item_switch_button"
            app:layout_constraintTop_toBottomOf="@+id/board_list_item_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>