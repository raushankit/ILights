<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frag_web_view_background">

    <TextView
        android:id="@+id/frag_web_view_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:fontFamily="@font/rubik_variable"
        android:textColor="@color/user_info_name_text"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ProgressBar
        android:id="@+id/frag_web_view_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminateTint="@color/purple_700"
        android:indeterminateOnly="false"
        android:layout_width="match_parent"
        android:elevation="@dimen/_5sdp"
        android:visibility="gone"
        android:progressTint="@color/controller_title_background"
        android:layout_marginTop="@dimen/_minus6sdp"
        android:layout_height="@dimen/_12sdp"
        android:indeterminateBehavior="repeat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_web_view_title_text"
        app:layout_constraintStart_toStartOf="parent"
        android:indeterminateTintMode="src_atop"/>
    <WebView
        android:id="@+id/frag_web_view_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_web_view_title_text"
        app:layout_constraintBottom_toTopOf="@id/frag_web_view_button_parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <RelativeLayout
        android:id="@+id/frag_web_view_button_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="@dimen/_2sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/frag_web_view_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@android:string/ok"
            android:textSize="@dimen/_14sdp"
            app:strokeWidth="0dp"
            android:padding="@dimen/_4sdp"
            android:paddingEnd="@dimen/_50sdp"
            android:paddingStart="@dimen/_50sdp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>