<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.board.NotificationFragment">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/fragment_notification_shimmer_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        app:shimmer_repeat_mode="restart">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/board_notification_list_item_shimmer"/>
            <include layout="@layout/board_notification_list_item_shimmer"/>
            <include layout="@layout/board_notification_list_item_shimmer"/>
            <include layout="@layout/board_notification_list_item_shimmer"/>
            <include layout="@layout/board_notification_list_item_shimmer"/>
            <include layout="@layout/board_notification_list_item_shimmer"/>
            <include layout="@layout/board_notification_list_item_shimmer"/>
            <include layout="@layout/board_notification_list_item_shimmer"/>
            <include layout="@layout/board_notification_list_item_shimmer"/>
            <include layout="@layout/board_notification_list_item_shimmer"/>
            <include layout="@layout/board_notification_list_item_shimmer"/>
            <include layout="@layout/board_notification_list_item_shimmer"/>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_notification_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:nestedScrollingEnabled="true"/>

</FrameLayout>