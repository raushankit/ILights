<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_3sdp"
    android:padding="@dimen/_10sdp"
    android:layout_height="@dimen/_60sdp">

    <View
        android:id="@+id/board_search_user_list_shimmer_check_box"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/pin_item_shimmer_frame"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <View
        android:id="@+id/board_search_user_list_shimmer_item_name"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_18sdp"
        android:background="@color/pin_item_shimmer_frame"
        android:layout_toEndOf="@id/board_search_user_list_shimmer_check_box"
        android:layout_marginStart="@dimen/_25sdp" />
    <View
        android:id="@+id/board_search_user_list_shimmer_item_email"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_8sdp"
        android:background="@color/pin_item_shimmer_frame"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toEndOf="@id/board_search_user_list_shimmer_check_box"
        android:layout_below="@id/board_search_user_list_shimmer_item_name"
        android:layout_marginStart="@dimen/_25sdp" />
</RelativeLayout>